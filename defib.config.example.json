{
  "webhookUrl": "https://discord.com/api/webhooks/YOUR_WEBHOOK_HERE",
  "stateFile": "~/.local/state/defib/state.json",
  "actions": {
    "restartContainer": "auto",
    "killRunaway": "auto",
    "killUnknown": "ask",
    "killSwapHog": "ask",
    "restartForSwap": "ask"
  },
  "container": {
    "healthUrl": "http://localhost:8000/health",
    "composeDir": "/path/to/your/app",
    "timeoutSeconds": 10,
    "maxResponseSeconds": 15,
    "backoffMinutes": 10,
    "serviceName": null
  },
  "processes": {
    "cpuThreshold": 80,
    "memoryThresholdMB": 2000,
    "maxRuntimeHours": 2,
    "safeToKillPatterns": [],
    "ignorePatterns": ["postgres", "ollama"]
  },
  "ai": {
    "provider": "none",
    "apiKey": null,
    "model": null,
    "ollamaUrl": "http://localhost:11434"
  },
  "system": {
    "swapThreshold": 80,
    "checkDState": true,
    "swapKillPatterns": [],
    "swapRestartCompose": null
  }
}
